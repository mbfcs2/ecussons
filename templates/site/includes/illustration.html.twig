<div class="illustration">
    {% if illustration %}
        <img src="{{ vich_uploader_asset(illustration, 'imageFile') }}" style='max-width:100%;max-height:100%;'>
            {% if illustration.credits is not none %}
                <div class="is-size-10 illustration_credits">{{ illustration.credits }}</div>
            {% endif %}
    {% else %}
        <p><i>Pas d'illustration</i></p>
    {% endif %}
</div>
