{% extends 'base.html.twig' %}

{% block title %}Destination index{% endblock %}

{% block body %}
    <h1>Destination index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>InseeCode</th>
                <th>ZipCode</th>
                <th>Name</th>
                <th>Slug</th>
                <th>GpsLat</th>
                <th>GpsLng</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.inseeCode }}</td>
                <td>{{ destination.zipCode }}</td>
                <td>{{ destination.name }}</td>
                <td>{{ destination.slug }}</td>
                <td>{{ destination.gpsLat }}</td>
                <td>{{ destination.gpsLng }}</td>
                <td>
                    <a href="{{ path('destination_show', {'id': destination.id}) }}">show</a>
                    <a href="{{ path('destination_edit', {'id': destination.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('destination_new') }}">Create new</a>
{% endblock %}
